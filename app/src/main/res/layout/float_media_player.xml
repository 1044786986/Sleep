<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="@dimen/dp_250"
    android:layout_height="@dimen/dp_60"
    android:background="@drawable/bg_float_media_player">

    <!--<LinearLayout-->
        <!--android:orientation="horizontal"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTimer"
                android:text="00:00"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/mediaPlayText"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

                <!--<Chronometer-->
                    <!--android:id="@+id/tvTimer"-->
                    <!--android:textSize="@dimen/sp_10"-->
                    <!--android:textColor="@color/mediaPlayText"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->

            <SeekBar
                android:id="@+id/seekBar"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/bg_seekbar"
                android:maxHeight="@dimen/dp_2"
                android:minHeight="@dimen/dp_2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvDuration"
                android:text="00:00"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/mediaPlayText"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_m_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:maxWidth="@dimen/dp_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvName"
                android:textColor="@color/mediaPlayText"
                android:textSize="@dimen/sp_12"
                android:focusable="true"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvAuthor"
                android:textColor="@color/mediaPlayText"
                android:textSize="@dimen/sp_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

                <ImageView
                    android:id="@+id/ivPrev"
                    android:src="@drawable/prev"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/ivPlay"
                    android:src="@drawable/play"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/ivNext"
                    android:src="@drawable/next"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="wrap_content" />
            </LinearLayout>

</LinearLayout>
    <!--</LinearLayout>-->

</LinearLayout>